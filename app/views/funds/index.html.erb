<h1>Listing funds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Source</th>
      <th>Type</th>
      <th>Age range</th>
      <th>Deadline</th>
      <th>Location</th>
      <th>External URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funds.each do |fund| %>
      <tr>
        <td><%= fund.title %></td>
        <td><%= fund.source %></td>
        <td><%= fund.type %></td>
        <td><%= fund.age_range %></td>
        <td><%= fund.deadline %></td>
        <td><%= fund.location %></td>
        <td><%= fund.ext_url %></td>
        <td><%= link_to 'Show', fund %></td>
        <td><%= link_to 'Edit', edit_fund_path(fund) %></td>
        <td><%= link_to 'Destroy', fund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fund', new_fund_path %>
