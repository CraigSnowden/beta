<div class="page-head">
        <h3 class="content__heading">Events</h3>
      </div>
      
      
         <% @events.each do |event| %>
    
        <div class="l-events">
          <div class="l-event">
            <div class="event-info">
              <div class="event-date">
                <h3><%= event.date_time.strftime("%e") %></h3>
                <p><%= event.date_time.strftime("%b") %></p>
              </div><!--
              --><div class="event-blurb">
                <h4><%= event.title %></h4>
                <small><%= event.venue %>, <%= event.location %></small>
                <small>10:00am – 5:00pm</small>
                <p><%= event.description %></p>
              </div>
            </div>
          </div>
          
          
        <% end %> 
      
<% if @user_admin = false %>  
     
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Venue</th>
      <th>Date + Time</th>
      <th>Description</th>
      <th>ext_url</th>
                  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    
     <tr>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><%= event.venue %></td>
        <td><%= event.date_time %></td>
        <td><%= event.description %></td>
        <td><%= event.ext_url %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
    
    
  </tbody>
</table>

<% end %> 


<%= link_to 'New Event', new_event_path %>
