<% if user_signed_in? %>
	<div>
		<a href="/<%= current_user.user_name %>">
			<img src="<%= current_user.avatar_url %>" height= "50px"> 
			<%=current_user.first_name %> 
		</a>
	</div>

	<div>
		<p><%= link_to "Log Out", destroy_user_session_path, method: :delete %></p>
	</div>


<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Description</th>
      <th>Thumbnail</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= truncate( article.content , :length => 100, :separator => ' ') %></td>
        <td><%= article.description %></td>
        <td><%= article.thumbnail %></td>
        <td><%= article.tag %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>

<% else %>

<h1>Hello</h1>
<p><%= link_to "Log In", new_user_session_path %></p>
<p><%= link_to "Sign Up", new_user_registration_path %></p>
<% end %>